  <build_depend>ros2_dependency1</build_depend>
  <build_depend>ros2_dependency2</build_depend>

  <!-- Use exec_depend for packages you need at runtime -->
  <!-- Add ROS 2 dependencies as needed -->
  <!-- Example: <exec_depend>some_ros2_package</exec_depend> -->
  <exec_depend>gazebo_ros</exec_depend>
  <exec_depend>ros2_dependency1</exec_depend>
  <exec_depend>ros2_dependency2</exec_depend>

  <!-- The export tag contains other, unspecified, tags -->
