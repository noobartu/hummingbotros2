  <name>hummingbot_plugin</name>
  <version>0.1.0</version> <!-- Update the version number as appropriate -->
  <description>The hummingbot_plugin package for ROS 2</description>

  <!-- One maintainer tag required, multiple allowed, one person per tag -->
  <maintainer email="humming_plugin@todo.todo">humming_plugin</maintainer>

  <!-- One license tag required, multiple allowed, one license per tag -->
  <!-- Commonly used license strings: -->
  <!--   BSD, MIT, Boost Software License, GPLv2, GPLv3, LGPLv2.1, LGPLv3 -->
